@model Livraria.Presentation.MVC.Models.Livro

@{
    ViewBag.Title = "Livro";
}

<h2>Editar</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Livro</h4>
